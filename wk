<body>

<div id="radio">
  <div id="display">OFF</div>
  <button id="power">Ligar</button>
  <input type="range" id="volume" min="0" max="100" value="50" />
  <input type="range" id="frequency" min="88000" max="108000" value="94500" step="10" />
</div>

<script>
  const powerBtn = document.getElementById('power');
  const volumeSlider = document.getElementById('volume');
  const frequencySlider = document.getElementById('frequency');
  const display = document.getElementById('display');

  let isOn = false;

  powerBtn.addEventListener('click', () => {
    isOn = !isOn;
    display.textContent = isOn ? `${(frequencySlider.value / 1000).toFixed(1)} MHz` : 'OFF';
    powerBtn.textContent = isOn ? 'Desligar' : 'Ligar';
    volumeSlider.disabled = !isOn;
    frequencySlider.disabled = !isOn;
  });

  frequencySlider.addEventListener('input', () => {
    if (isOn) {
      display.textContent = `${(frequencySlider.value / 1000).toFixed(1)} MHz`;
    }
  });

  volumeSlider.addEventListener('input', () => {
    // Volume control placeholder
    if (isOn) {
      display.textContent = `${(frequencySlider.value / 1000).toFixed(1)} MHz - Vol: ${volumeSlider.value}%`;
    }
  });

  // Inicialmente desabilitado
  volumeSlider.disabled = true;
  frequencySlider.disabled = true;
</script>

</body>
